#!/usr/bin/env bash

FILE="$(mktemp)"
cat << SRC > $FILE
(load! "rad/monadic/issues.rad")

(def mk-key (fn [v]
  (def key (nth 0 v))
  (def val (nth 1 v))
  [(string-append (show key) " - " (lookup :title val)) val]))
(def iss (dict-from-list (map mk-key (seq (list-issues)))))
(def selected (fzf-select-by-key! iss))
(print! selected)
SRC
radicle -- $FILE

